<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="page_title">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <!-- -->
    <style name="lblDegree">
        <item name="android:textSize">@dimen/font_size_48</item>
        <item name="android:textColor">@color/app_yellow</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="lblCity">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="lblDescription">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="lblPlaceName">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <!-- -->

    <!-- -->
    <style name="item_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- -->

    <!-- -->
    <style name="input_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="input_edit">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- -->

    <!-- -->
    <style name="default_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="share_button" parent="default_button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>
    <!-- -->

    <!-- -->
    <style name="customCardview" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!-- -->
</resources>